<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clínica_UTP_Salud_y_Vida.Views.Bienvenida"
             Title="Bienvenida"
              NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="68,*,68" Padding="0" BackgroundColor="#F3EFE0">


        <VerticalStackLayout Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center" Padding="10">


            <Label Text="Clínica Universitaria"
                   FontSize="32"
                   FontFamily="Inter"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center"/>


            <Image Source="logo.png" HeightRequest="280" HorizontalOptions="Center"/>

        </VerticalStackLayout>


        <BoxView Grid.Row="2" HeightRequest="68" BackgroundColor="#201E1F"/>
        <BoxView Grid.Row="2" HeightRequest="28" BackgroundColor="#087E8B"/>

        <BoxView Grid.Row="0" HeightRequest="68" BackgroundColor="#087E8B"/>
        <BoxView Grid.Row="0" HeightRequest="28" BackgroundColor="#201E1F"/>
    </Grid>
</ContentPage>
